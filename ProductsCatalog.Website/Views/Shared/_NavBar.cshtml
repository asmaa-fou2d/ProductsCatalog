
<header id="header">
  <div class="header-middle">
    <!--header-middle-->
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <div class="logo pull-left">
          @*  <a href='@Url.Action("Index","Home")'><img src="~/Content/images/home/logo.png" style="width:50%" alt="" /></a>*@
          </div>
        </div>

        <div class="col-sm-8">
          <div class="shop-menu pull-right">
            <ul class="nav navbar-nav">
              @if (User.Identity.IsAuthenticated)
              {
                <li style="margin-top: 3%;">Welcome, @User.Identity.Name</li>
                if (User.IsInRole("Admin"))
                {
                  <li><a href='@Url.Action("Index", "Slideshow")'><i class="fa fa-crosshairs"></i> Dashboard</a></li>
                }
                else
                {
                  <li><a href='@Url.Action("Index", "WishList")'><i class="fa fa-star"></i> Wishlist</a></li>
                  @*
                    <li><a href="cart.html"><i class="fa fa-shopping-cart"></i> Cart</a></li>
                  *@
                }
                <li><a href='@Url.Action("LogOut", "Account")'><i class="fa fa-user"></i> Log out</a></li>
              }
              else
              {
                <li><a href='@Url.Action("Login", "Account")'><i class="fa fa-lock"></i> Login</a></li>
              }
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div><!--/header-middle-->
</header><!--/header-->
