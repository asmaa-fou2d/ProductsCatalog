@model IEnumerable<ProductsCatalog.Website.ViewModels.WishListViewModel>

@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<section id="cart_items">
  <div class="container">

    <div class="review-payment">
      <h2>My Wishlist</h2>
    </div>
    <div class="table-responsive cart_info">
      <table class="table table-condensed">
        <thead>
          <tr class="cart_menu">
            <td class="image">Item</td>
            <td class="description"></td>
            <td class="total">Price</td>
            <td></td>
          </tr>
        </thead>
        <tbody>

          @foreach (var product in Model)
          {
            <tr>
              <td class="cart_product">
                <a href=""><img width="150" src="/Uploads/@product.ProductPhoto" alt=""></a>
              </td>
              <td class="cart_description">
                <h4><a href="">@product.ProductName</a></h4>
                @*  <p>Web ID: 1089772</p>*@
              </td>

              <td class="cart_total">
                <p class="cart_total_price">@product.ProductPrice EGP</p>
              </td>
              <td class="cart_delete">
                <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
              </td>
            </tr>
          }


        </tbody>
      </table>
    </div>
  </div>
</section>